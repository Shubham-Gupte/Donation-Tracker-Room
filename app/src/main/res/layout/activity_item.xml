<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity">

    <Spinner
        android:id="@+id/itemSelector"
        android:layout_width="368dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Item Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemSelector" />

    <TextView
        android:id="@+id/itemCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Item Cost:"
        app:layout_constraintTop_toBottomOf="@+id/itemName"
        tools:layout_editor_absoluteX="15dp" />

    <TextView
        android:id="@+id/itemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Item Type:"
        app:layout_constraintTop_toBottomOf="@+id/itemCost"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/donationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Donation Date:"
        app:layout_constraintTop_toBottomOf="@+id/itemType"
        tools:layout_editor_absoluteX="15dp" />

    <TextView
        android:id="@+id/donationLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Donation Location:"
        app:layout_constraintTop_toBottomOf="@+id/donationDate"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/nameAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/costAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/itemTypeAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/dateAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/locationAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/removeItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="52dp"
        android:text="Remove Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationAttribute" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="514dp" />
</android.support.constraint.ConstraintLayout>